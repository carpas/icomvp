#!/bin/sh
mkdir -p /home/rafzdv/webapps/icowebapp/run
pid=$(/sbin/pidof /home/rafzdv/webapps/icowebapp/bin/node)
if echo "$pid" | grep -q " "; then
  pid=""
fi
if [ -n "$pid" ]; then
  user=$(ps -p $pid -o user | tail -n 1)
  if [ $user = "rafzdv" ]; then
    exit 0
  fi
fi
nohup /home/rafzdv/webapps/icowebapp/bin/node /home/rafzdv/webapps/icowebapp/hello-world.js > /dev/null 2>&1 &
/sbin/pidof /home/rafzdv/webapps/icowebapp/bin/node > /home/rafzdv/webapps/icowebapp/run/node.pid
